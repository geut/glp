{
  "name": "@geut/glp",
  "productName": "GLP",
  "version": "0.0.0",
  "description": "GEUT Learning Project",
  "license": "MIT",
  "repository": "geut/glp",
  "main": "./bundle/main.js",
  "author": {
    "name": "GEUT",
    "email": "contact@geutstudio.com",
    "url": "https://geutstudio.com"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "xo",
    "test": "npm run lint",
    "dev": "electron-webpack dev",
    "start": "npm run webpackMain && npm run webpackRenderer && electron .",
    "webpackMain": "webpack --config ./webpack.main.js --mode development",
    "webpackRenderer": "webpack --config ./webpack.renderer.js --mode development",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --macos --linux --windows",
    "release": "np"
  },
  "dependencies": {
    "@material-ui/core": "^4.1.3",
    "@material-ui/icons": "^4.2.1",
    "dat-node": "^3.5.15",
    "electron-context-menu": "^0.12.1",
    "electron-debug": "^3.0.0",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^3.3.0",
    "electron-unhandled": "^2.2.0",
    "electron-updater": "^4.0.6",
    "electron-util": "^0.12.0",
    "file-type": "^12.0.1",
    "mkdirp": "^0.5.1",
    "node-ipc": "^9.1.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-sortable-tree": "^2.6.2",
    "react-sortable-tree-theme-file-explorer": "^2.0.0",
    "typeface-cooper-hewitt": "0.0.44",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "csp-html-webpack-plugin": "^3.0.2",
    "css-loader": "^3.0.0",
    "electron": "^5.0.4",
    "electron-builder": "^20.43.0",
    "electron-webpack": "^2.7.2",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-react": "^0.20.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "html-webpack-plugin": "^3.2.0",
    "np": "^5.0.3",
    "style-loader": "^0.23.1",
    "webpack": "^4.35.3",
    "xo": "^0.24.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "10"
          }
        }
      ],
      "@babel/preset-react"
    ]
  },
  "xo": {
    "space": true,
    "envs": [
      "node",
      "browser"
    ],
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "extends": "xo-react",
    "ignores": [
      "utils/find-open-socket.js"
    ]
  },
  "np": {
    "publish": false,
    "releaseDraft": false
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "./"
    },
    "renderer": {
      "sourceDirectory": "./renderer"
    },
    "commonSourceDirectory": "./common"
  },
  "build": {
    "appId": "com.company.AppName",
    "mac": {
      "category": "public.app-category.social-networking",
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Chat"
    }
  }
}
